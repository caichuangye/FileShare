<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="174dp"
    android:layout_height="174dp">
    <ImageView
        android:id="@+id/image"
        android:background="#c5c5c5"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/huhu_174_dp"
        android:layout_height="@dimen/huhu_174_dp" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/huhu_25_dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/huhu_25_dp"
            android:background="#94000000"/>

        <TextView
            android:id="@+id/folder_info"
            android:layout_marginLeft="@dimen/huhu_4_dp"
            android:textSize="14sp"
            android:textColor="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="screenshot(12)"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:visibility="gone"
            android:id="@+id/image_date"
            android:textSize="14sp"
            android:textColor="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/huhu_4_dp"
            android:text="16:04:16"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/selected_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/select"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp" />

    <com.huhu.fileshare.ui.view.DownloadIcon
        android:id="@+id/download_icon"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <View
        android:visibility="gone"
        android:id="@+id/selected_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#94000000"/>

</RelativeLayout>